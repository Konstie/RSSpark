<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/feeds_item_height">
    <ImageView
        android:layout_width="@dimen/feeds_menu_icon_size"
        android:layout_height="@dimen/feeds_menu_icon_size"
        android:id="@+id/btn_remove_feed"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_remove"
        android:layout_marginEnd="@dimen/feeds_margin"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:id="@+id/feed_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Kotaku"
        android:lines="1"
        android:ellipsize="end"
        android:maxLength="42"
        android:textSize="@dimen/feeds_title_text_size"
        android:textColor="@color/color_primary_text"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/feeds_margin"
        android:layout_toStartOf="@id/btn_remove_feed"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/text_margin"/>
</RelativeLayout>