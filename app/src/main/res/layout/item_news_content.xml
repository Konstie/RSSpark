<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/place_item_root_layout"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/news_header_image_view"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/news_card_content_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_title_text_view"
            android:textSize="@dimen/news_card_header_font_size"
            android:text="Title title title"
            android:textColor="@color/color_primary_text"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_card_subtext_font_size"
            android:textColor="@color/color_primary_text"
            android:id="@+id/news_description_text_view"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Super-dooper description"
            android:layout_below="@id/news_title_text_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="@dimen/news_card_subtext_font_size"
            android:id="@+id/news_date_text_view"
            android:layout_below="@id/news_description_text_view"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</LinearLayout>