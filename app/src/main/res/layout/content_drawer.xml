<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/btn_add_feed"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="@dimen/feeds_item_height"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_marginStart="@dimen/text_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/drawer_add_new_rss"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/feeds_title_text_size" />
            <ImageView
                android:layout_width="@dimen/feeds_menu_icon_size"
                android:layout_height="@dimen/feeds_menu_icon_size"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/feeds_margin"
                android:src="@drawable/ic_action_add" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rss_sources_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:layout_above="@id/btn_add_feed"
            android:fitsSystemWindows="true">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.design.widget.NavigationView>